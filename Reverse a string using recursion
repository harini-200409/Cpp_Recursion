#include <iostream>
#include<cstring>
using namespace std;
void reverse(string &str,int start,int end)
{
    if(start>=end)
    return;
    int temp;
    temp=str[start];
    str[start]=str[end];
    str[end]=temp;
    
    reverse(str,start+1,end-1);
}
int main()
{
    string str;
    cin>>str;
    reverse(str,0,str.length()-1);
    cout<<str;
    return 0;
}
